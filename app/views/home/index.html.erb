<!-- Home#index -->
<h3>Current User: <%= current_user.email %></h3>

<h2>List of All Possible Friends</h2>
<p>Add or Remove a Friend</p>
<ul>
	<% @users.each do |user| %>
      <li><%= user.email %><%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :create %></li>
	<% end %>
</ul>


<h2>List of My Friends</h2>
<ul>
	<% @friendships.each do |friendship| %>
      <li><%= friendship.friend.email %> <%= link_to "Destroy", friendship_path(friendship), :method => :delete %> </li>
	<% end %>
</ul>
